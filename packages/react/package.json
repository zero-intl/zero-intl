{
  "name": "@zero-intl/react",
  "version": "0.0.22",
  "description": "Library for integrating Zero Intl with React applications",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "size-limit": "size-limit"
  },
  "keywords": [
    "globalization",
    "i18n",
    "internationalization",
    "intl",
    "locale",
    "localization",
    "react",
    "reactjs",
    "translate",
    "translation"
  ],
  "author": "Jakub PomykaÅ‚a",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@zero-intl/core": "*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.7.0",
    "jsdom": "^24.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "size-limit": "^11.2.0"
  },
  "size-limit": [
    {
      "path": "dist/index.mjs",
      "limit": "20 KB"
    }
  ]
}
